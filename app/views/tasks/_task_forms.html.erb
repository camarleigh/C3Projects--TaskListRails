<%= form_for @task do |f| %> 

<fieldset>

<legend> Add Task Form </legend>

<%= f.label :task_name %>
<%= f.text_field :task_name %>

<%= f.label :task_description %>
<%= f.text_area :task_description %>

<%= f.label :task_completed %>
<%= f.text_area :task_completed  %>

<%= f.label :task_started %>
<%= f.text_area :task_started  %>

</fieldset>

<%= f.submit 'Add to Task List' %>

<% end %>






